#!/bin/bash
# Shell wrapper for the sadden_img Python script using Poetry

# Check if correct number of arguments provided
if [ "$#" -ne 2 ]; then
    echo "Usage: $0 <input_image> <output_image>"
    echo "Example: $0 input.jpg output.png"
    exit 1
fi

# Convert paths to absolute paths
arg1=$(readlink -f "$1")
arg2=$(readlink -f "$2")

# Check if input file exists
if [ ! -f "$arg1" ]; then
    echo "Error: Input file '$1' not found"
    exit 1
fi

# Run the Python script with Poetry from the scripts directory
(cd ~/scripts/python && poetry run python src/python/sadden_img.py "$arg1" "$arg2")
